<h1>users#main</h1>
<h2><%= @user.name %></h2>

<% if @user.is_on_duty %>
	<%= link_to "退勤" , clock_out_path, method: :patch %>
<% elsif %>
	<%= link_to "出勤" , clock_in_path, method: :post %>
<% end %>

<%= link_to "Log Out", destroy_user_session_path, method: :delete %>

<% @stamps.each do |stamp| %>
	<h3>In Time</h3>
	<p><%= stamp.in_time%></p>
	<h3>Out Time</h3>
	<p><%= stamp.out_time%></p>
<% end %>
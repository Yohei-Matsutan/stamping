<h1>Stamps#show</h1>
<p>Find me in app/views/stamps/show.html.erb</p>

<h2><%= @stamp.user.name %></h2>
<h2>出勤記録</h2>
<table>
	<thead>
		<tr>
			<th>出勤時刻</th>
			<th>退勤時刻</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><%= @stamp.in_time.strftime("%F %R") %></td>
			<td><%= @stamp.out_time.strftime("%R") %></td>
		</tr>
	</tbody>
</table>

<h2>変更履歴</h2>
<% @stamp.stamp_logs.each do |stamp_log|%>
<h3>edited by <%= stamp_log.user.name %> in <%= stamp_log.created_at.strftime("%F %R") %></h3>
	<table>
		<thead>
			<tr>
				<th></th>
				<th>日付</th>
				<th>出勤時刻</th>
				<th>退勤時刻</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>更新前</td>
				<td><%= stamp_log.old_in_time.strftime("%F") %></td>
				<td><%= stamp_log.old_in_time.strftime("%R") %></td>
				<td><%= stamp_log.old_out_time.strftime("%R") %></td>
			</tr>
			<tr>
				<td>↓</td>
			</tr>
			<tr>
				<td>更新後</td>
				<td><%= stamp_log.new_in_time.strftime("%F") %></td>
				<td><%= stamp_log.new_in_time.strftime("%R") %></td>
				<td><%= stamp_log.new_out_time.strftime("%R") %></td>
			</tr>
		</tbody>
	</table>
<% end %>